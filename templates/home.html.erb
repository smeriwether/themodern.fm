<header class="mb-12 text-center">
  <h1 class="text-6xl font-bold pb-2 leading-tight font-merriweather font-black lg:text-8xl">
    <a href="index.html">The Modern</a>
  </h1>
  <p class="lg:text-xl">A podcast network by <a href="https://twitter.com/J_DFerrell" rel="noopener">JD Ferrell</a> and <a href="https://stephen.fyi" rel="noopener">Stephen Meriwether</a></p>
</header>

<section class="mb-12 py-4 px-4 bg-yellow-50 lg:py-8 lg:px-8" data-attr="latest-podcast">
  <header class="ml-6">
    <h2 class="font-bold font-sm uppercase tracking-wider">Latest Podcast</h2>
  </header>

  <div class="flex flex-col lg:flex-row">
    <img src="<%= @latest_episode.artwork_url %>" alt="" class="max-w-xxs max-h-60 m-6 shadow-xl rounded transform -rotate-2" />

    <div class="p-6 flex flex-col justify-center">
      <h3 class="mb-2 text-lg font-bold"><%= @latest_episode.podcast_title %></h3>
      <h4 class="mb-4"><%= @latest_episode.title %></h4>
      <p class="mb-4 text-sm leading-relaxed">
        <%= @latest_episode.description[0..208] %>
        <% if @latest_episode.description.length > 208 %>
          ...
        <% end %>
      </p>
      <a href="<%= @latest_episode.url %>" class="text-sm">
        <span class="mr-1">Listen Online</span>
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-4 h-4 inline">
          <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
      </a>
    </div>
  </div>
</section>

<% @podcasts.each do |podcast| %>
  <section class="mb-12 lg:pl-12">
    <header class="flex items-center mb-8">
      <img src="<%= podcast.artwork_url %>" alt="" class="w-20 h-20 shadow rounded mr-4" />
      <h2 class="font-bold text-2xl"><a href="<%= podcast.url %>"><%= podcast.title %></a></h2>
    </header>

    <ol class="ml-4 lg:ml-8">
      <% podcast.episodes.first(5).each do |episode| %>
        <li class="pb-4">
          <a href="<%= episode.url %>" class="font-normal">
            <span class="font-bold mr-3"><%= episode.number %></span><%= episode.title %>
          </a>
        </li>
      <% end %>

      <li class="pt-2">
        <a href="<%= podcast.url %>" class="text-sm">
          <span class="mr-1">View All</span>
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-4 h-4 inline">
            <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </a>
      </li>
    </ol>
  </section>
<% end %>
